    <title>JsSlideshow</title>
    <style>
        div {
            width: 500px;
            height: 300px;
            overflow: hidden;
            margin: auto;
            border-radius: 8px;
            box-shadow: 0 3px 4px 2px gray;
        }

        .img {
            width: 500px;
            height: 300px;
        }

        .ul-class {
            position: relative;
            display: flex;
            transition: .3s;
            margin-left: -40px;
            margin-top: 0;
        }

        li {
            list-style: none;
        }

        button {
            position: absolute;
            top: 120px;
            font-size: 3rem;
            color: rgb(177, 160, 114);
            border: none;
            outline: none;
            background-color: rgb(255, 255, 255, 0.3);
            border-radius: 8px;
        }

        button:hover {
            background-color: rgba(248, 195, 80, 0.8);
            color: rgb(112, 107, 92);
        }

        .button-left {
            left: 518px;
            width: 50px;
            height: 70px;
        }

        .button-right {
            left: 969px;
            width: 50px;
            height: 70px;
        }
    </style>
